{
  "store.product": {
    "children": [
      "flex-layout.row#main"
    ]
  },
  "flex-layout.row#main": { 
    "props": { 
      "marginTop": 6
    },
    "children": [
      "flex-layout.col#left",
      "flex-layout.col#right"
    ]
  },
  "flex-layout.col#left": { 
    "children": [ 
      "product-images"
    ]
  },
  "flex-layout.col#right": { 
    "props": { 
      "preventVerticalStretch": true,
      "rowGap": 5,
      "verticalAlign": "middle"
    },
    "children": [ 
      "product-name",
      "product-price",
      "buy-button"
    ]
  },
  "product-price": { 
    "props": { 
      "showInstallments": true,
      "showSavings": true,
      "showListPrice": true
    }
  }
}